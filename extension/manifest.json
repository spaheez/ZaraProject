{
  "name": "Saley",
  "version": "1.0.0",
  "description": "This extension sends you an email when your Zara item goes on sale!",
  "manifest_version": 2,
  "icons":{"512":"logo.png"},

  "background": {"scripts":["background.js"],
    "persistent":false},

  "page_action":{
    "default_icon":"logo.png",
    "default_title":"Saley",
    "default_popup": "popup.html"
  },

  "permissions":[
    "tabs",
    "*://www.zara.com/*",
    "declarativeContent",
    "identity",
    "identity.email",
    "http://127.0.0.1:3000/"
  ],

  "content_security_policy": "script-src 'self' https://unpkg.com/axios/dist/axios.min.js; object-src 'self'"
}
